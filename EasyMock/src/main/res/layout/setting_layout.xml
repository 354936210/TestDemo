<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:padding="10dp"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:paddingBottom="10dp"
            android:id="@+id/setting_tv_title"
            android:textColor="#fff"
            android:text="设置"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <LinearLayout
            android:background="@drawable/biankuang"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/switch1"
                    android:layout_alignBottom="@+id/switch1"
                    android:text="自动检查更新" />
                <Switch
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch1" />
            </RelativeLayout>
            <View
                android:background="#ece9e9"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>

            <RelativeLayout
                android:background="@drawable/press"
                android:id="@+id/setting_product"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="产品介绍" />

                <ImageView
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ic_keyboard_arrow_right_white_36dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />

            </RelativeLayout>
            <View
                android:background="#ece9e9"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>
            <RelativeLayout
                android:background="@drawable/press"
                android:id="@+id/setting_fankui"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="建议反馈" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ic_keyboard_arrow_right_white_36dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />
            </RelativeLayout>
            <View
                android:background="#ece9e9"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>
            <RelativeLayout
                android:background="@drawable/press"
                android:id="@+id/setting_dianzan"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="产品还可以，为你们点赞~" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ic_keyboard_arrow_right_white_36dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />
            </RelativeLayout>
            <View
                android:background="#ece9e9"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/bt_tuichu"
        android:text="退出程序"
        android:textColor="#fff"
        android:background="@drawable/bt_bg_red"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
